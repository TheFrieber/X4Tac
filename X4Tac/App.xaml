<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:X4Tac"
             x:Class="X4Tac.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Hintergrundfarben -->
            <Color x:Key="BackgroundDark">#121212</Color>
            <Color x:Key="BackgroundLight">#1E1E1E</Color>

            <!-- Textfarben -->
            <Color x:Key="TextPrimary">#E0E0E0</Color>
            <Color x:Key="TextSecondary">#B0B0B0</Color>

            <!-- Akzentfarben -->
            <Color x:Key="AccentColor">#4D8AFF</Color>

            <!-- Button Farben -->
            <Color x:Key="ButtonBackground">#333333</Color>
            <Color x:Key="ButtonText">#E0E0E0</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
